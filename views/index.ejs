<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Kalam&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
    <style>
        /* public/styles.css */
body {
    font-family: 'Arial', sans-serif;
    color: #333;
    margin: 0;
}

.main {
    max-width: 600px;
    margin: 50px auto;
}

.task-list {
    list-style: none;
    padding: 0;
}

.task-item {
    background-color: #fff;
    padding: 15px;
    margin-bottom: 15px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.task-item input[type="checkbox"] {
    margin-right: 10px;
}

form {
    display: flex;
    margin-top: 20px;
}

input[type="text"] {
    flex: 1;
    padding: 15px;
    border: 1px solid #ddd;
    border-radius: 8px 0 0 8px;
}

input[type="submit"] {
    background-color: #3498db;
    color: #fff;
    padding: 15px;
    border: none;
    border-radius: 0 8px 8px 0;
    cursor: pointer;
}


    </style>
</head>

<body>
    <main>
        <div class="nav-bar">
            <a class="nav-link" href="/today">ðŸ“† Today</a>
            <a class="nav-link" href="/work">ðŸ“Œ Work</a>
        </div>

        <div>
            <% const days = ["Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"];%>
            <% const d = new Date(); %>
            <% let day = days[d.getDay()]; %>

            <% const month = ["January","February","March","April","May","June","July","August","September","October","November","December"]; %>
            <% const d2 = new Date(); %>
            <% let name = month[d2.getMonth()]; %>

            <% var today = new Date(); %> 
            <% var dd = String(today.getDate()).padStart(2, '0'); %>
            <h1 class="heading"><%= day %>, <%= name %> <%= dd %></h1>
        </div>

        <div class="main">
            <% if(locals.item) { %>
                <ul>
                    <% for(let i=0; i<item.length; i++) { %>
                        <li><%= item[i] %></li>
                    <% } %>
                </ul>
                <form action="/submit" method="post">
                    <input type="text" placeholder="New Item" id="form" name="item" required>
                    <input type="submit" value="Submit" id="form-submit">
                </form>
            <% } else { %>
                <form action="/submit" method="post">
                    <input type="text" placeholder="New Item" id="form" name="item" required>
                    <input type="submit" value="Submit" id="form-submit">
                </form>
            <% } %>
        </div>
    </main>
    <footer>
        <p>Copyright Â© <%= new Date().getFullYear() %></p>
    </footer>
</body>

</html>
